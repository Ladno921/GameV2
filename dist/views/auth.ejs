    <div class="content">
      <form class="form__center" action="/login" method="post">

        <div class="form">

          <ul class="tab-group">
            <li class="tab"><a href="/registration">Зарегистрироваться</a></li>
            <li class="tab active"><a href="/auth">Войти</a></li>
          </ul>

          <div id="login">
            <h1>С возвращением!</h1>

            <div class="field-wrap">
              <label class="label">
                Имя
              </label>
              <input class="form-group__input" id="name" name="name" type="text" placeholder="Введите Имя" required>
            </div>

            <div class="field-wrap">
              <label class="label">
                Email Адрес
              </label>
              <input class="form-group__input" type="email" id="email" name="email" placeholder="Введите email"
                required>
            </div>

            <div class="field-wrap">
              <label class="label">
                Пароль
              </label>
              <input class="form-group__input" id="password" name="password" type="password"
                placeholder="Введите Пароль" required>
            </div>

            <button class="button1 button-block">Войти</button>

          </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->


    </form>
